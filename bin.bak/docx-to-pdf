
#!/bin/bash

# Check if the input file exists
if [ ! -f "$1" ]; then
  echo "Error: Input file '$1' does not exist."
  exit 1
fi

# Check if LibreOffice is installed
if [ ! -f /usr/bin/soffice ]; then
  echo "Error: LibreOffice is not installed."
  exit 1
fi

# Convert the docx file to pdf using LibreOffice
soffice --headless --convert-to pdf "$1"

# Exit the script
exit 0

